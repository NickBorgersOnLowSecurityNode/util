{
  "index_patterns": ["internet-connection-monitor-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "index.refresh_interval": "5s",
      "index.lifecycle.name": "internet-monitor-ilm-policy",
      "index.lifecycle.rollover_alias": "internet-connection-monitor"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "test_id": {
          "type": "keyword"
        },
        "site": {
          "properties": {
            "url": {
              "type": "keyword"
            },
            "name": {
              "type": "keyword"
            },
            "category": {
              "type": "keyword"
            }
          }
        },
        "status": {
          "properties": {
            "success": {
              "type": "boolean"
            },
            "http_status": {
              "type": "integer"
            },
            "message": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
        "error": {
          "properties": {
            "error_type": {
              "type": "keyword"
            },
            "error_message": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "failure_phase": {
              "type": "keyword"
            },
            "stack_trace": {
              "type": "text"
            }
          }
        },
        "timings": {
          "properties": {
            "dns_lookup_ms": {
              "type": "integer"
            },
            "tcp_connection_ms": {
              "type": "integer"
            },
            "tls_handshake_ms": {
              "type": "integer"
            },
            "time_to_first_byte_ms": {
              "type": "integer"
            },
            "dom_content_loaded_ms": {
              "type": "integer"
            },
            "full_page_load_ms": {
              "type": "integer"
            },
            "network_idle_ms": {
              "type": "integer"
            },
            "total_duration_ms": {
              "type": "integer"
            }
          }
        },
        "metadata": {
          "properties": {
            "hostname": {
              "type": "keyword"
            },
            "version": {
              "type": "keyword"
            },
            "user_agent": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        }
      }
    }
  },
  "priority": 500,
  "composed_of": [],
  "version": 2,
  "_meta": {
    "description": "Index template for Internet Connection Monitor test results",
    "created_by": "internet-connection-monitor",
    "created_at": "2025-01-08",
    "updated_at": "2025-11-11",
    "changes": "Added failure_phase field, updated schema to match v1.3.0 data model"
  }
}
